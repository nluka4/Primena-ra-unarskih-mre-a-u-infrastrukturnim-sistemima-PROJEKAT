<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Nole Space Invaders" >
    <Canvas Name="radnaPovrsina"  MouseMove="PlayerMovement" Background="Black" MouseDown="Pucaj">
        
        <TextBlock  FontSize="50" Foreground="white" Cursor="None">
            X:<Label Name="Xkoord" Height="53" VerticalAlignment="Center" Padding="0" FontSize="50" Foreground="white" RenderTransformOrigin="0.618,0.572">0</Label>
        </TextBlock>
        <TextBlock Margin="0 53 0 0" FontSize="50" Foreground="white">
            Y:<Label Name="Ykoord" Height="55" VerticalAlignment="Center" Padding="0" FontSize="50" Foreground="white" RenderTransformOrigin="0.618,0.572">0</Label>
        </TextBlock>

        <Image Stretch="Uniform" Name="player" Source="/igrac.png" HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="100"/>
        <Label Content="Score: 0" HorizontalAlignment="Left" Margin="10,548,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Background="{x:Null}" Foreground="White" AutomationProperties.Name="txtScore"/>
    </Canvas>
</Window>
